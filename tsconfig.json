{
	"compilerOptions": {
		"target": "ES6",
		"declaration": false /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
		"noImplicitAny": true,
		"removeComments": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"noLib": false,
		/* Modules */
		"module": "ESNext",
		"sourceMap": true,
		"lib": [
			//
			"ESNext",
			"DOM"
		],
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["packages", "packages/components/global.d.ts"],
	"exclude": ["**/__tests__", "dist/*"]
}
